@model IEnumerable<EntityLayer.Concrete.ProjeGereksinim>

@foreach (var item in Model)
{
    <div class="form-group mb-4">
        <div class="row">
            <label class="col-md-4">Requirement Name & Level :</label>
            <div class="col-md-6">
                @Html.TextBoxFor(modelItem => item.gereksinimAdi, new { @class = "form-control ", @style = "width:250px;height:45px", size = "5" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("Requirement Level", new List<SelectListItem>{
                               new SelectListItem{ Text="Junior", Value = "1" },
                               new SelectListItem{ Text="Middle", Value = "2" },
                               new SelectListItem{ Text="Senior", Value = "3" },},
                               new { @class = "form-control  ", @style = "width:80px;height:45px", })

            </div>
        </div>
    </div>
}


